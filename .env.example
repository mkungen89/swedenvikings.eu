# ===========================================
# Sweden Vikings CMS - Environment Variables
# ===========================================
# Copy this file to .env.production and fill in the values

# ===========================================
# Database
# ===========================================
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Full database URL (used by Prisma)
# For Docker: postgresql://postgres:${DB_PASSWORD}@postgres:5432/swedenvikings
# For local dev: postgresql://postgres:postgres@localhost:5432/swedenvikings
DATABASE_URL=postgresql://postgres:CHANGE_ME@postgres:5432/swedenvikings

# ===========================================
# Redis
# ===========================================
# For Docker: redis://redis:6379
# For local dev: redis://localhost:6379
REDIS_URL=redis://redis:6379

# ===========================================
# Session & Security
# ===========================================
# Generate with: openssl rand -hex 32
SESSION_SECRET=CHANGE_ME_RANDOM_64_CHARS

# ===========================================
# Steam Authentication
# ===========================================
# Get your Steam API key at: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=YOUR_STEAM_API_KEY
STEAM_REALM=https://yourdomain.com
STEAM_RETURN_URL=https://yourdomain.com/api/auth/steam/callback

# ===========================================
# URLs
# ===========================================
# Your domain (no trailing slash)
CLIENT_URL=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# ===========================================
# Server
# ===========================================
PORT=3001
NODE_ENV=production

# ===========================================
# Arma Reforger Server (Linux paths)
# ===========================================
# Path where Arma Reforger Server is installed
ARMA_SERVER_PATH=/opt/arma-reforger-server

# Executable name (no .exe on Linux)
ARMA_SERVER_EXE=ArmaReforgerServer

# Path to SteamCMD
STEAMCMD_PATH=/opt/steamcmd

# ===========================================
# Email (Optional - for notifications)
# ===========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
