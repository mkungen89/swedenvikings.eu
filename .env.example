# ===========================================
# Sweden Vikings CMS - Environment Variables
# ===========================================
# Copy this file to .env for development or .env.production for production

# Application
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL="postgresql://swedenvikings:vikings2024@localhost:5432/swedenvikings"
# Production: DB_PASSWORD=STRONG_PASSWORD_HERE

# Redis
REDIS_URL="redis://localhost:6379"

# Session (Generate: openssl rand -base64 64)
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHARACTER_STRING

# Steam Authentication (https://steamcommunity.com/dev/apikey)
STEAM_API_KEY=YOUR_STEAM_API_KEY
STEAM_REALM=http://localhost:3001
STEAM_RETURN_URL=http://localhost:3001/api/auth/steam/callback

# Discord Webhooks (optional)
DISCORD_WEBHOOK_NEWS=
DISCORD_WEBHOOK_EVENTS=
DISCORD_WEBHOOK_SERVER=
DISCORD_WEBHOOK_ADMIN=

# Email (SMTP)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@swedenvikings.eu

# Arma Reforger Server (Windows)
ARMA_SERVER_PATH=C:/arma-reforger-server
ARMA_SERVER_EXE=ArmaReforgerServer.exe
STEAMCMD_PATH=C:/steamcmd

# Linux Production:
# ARMA_SERVER_PATH=/opt/arma-reforger-server
# ARMA_SERVER_EXE=ArmaReforgerServer
# STEAMCMD_PATH=/opt/steamcmd

# File Uploads
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=./uploads

# Security
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Backup
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
